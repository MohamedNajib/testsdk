<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/kj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homebackground">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="42dp">

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="10dp"
                android:text="وسائل الاتصال"
                android:textColor="#343434"
                android:textDirection="rtl" />

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_info"
                android:layout_marginTop="16dp"
                android:background="@drawable/card_background2">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView8"
                    android:layout_alignTop="@+id/textView9"
                    android:text="https://www.niaba-laws.com"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textDirection="rtl"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView3"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="28dp"
                    android:paddingRight="15dp"
                    android:text="الموقع الإلكتروني :"
                    android:textColor="#343434"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="16dp"
                    android:paddingRight="15dp"
                    android:text="رقم الجوال :"
                    android:textAlignment="gravity"
                    android:textColor="#343434"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="15dp"
                    android:paddingRight="15dp"
                    android:text="رقم الفاكس :"
                    android:textColor="#343434"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="12dp"
                    android:paddingRight="15dp"
                    android:text="البريد الإلكتروني :"
                    android:textColor="#343434"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@+id/textView3"
                    android:text="01090606059"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textDirection="rtl"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView5"
                    android:layout_alignStart="@+id/textView6"
                    android:text="0020882302120"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textDirection="rtl"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginEnd="11dp"
                    android:layout_toStartOf="@+id/textView5"
                    android:text="softniba@gmail.com"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textDirection="rtl"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txt_info"
                android:layout_below="@+id/re"
                android:layout_marginTop="16dp"
                android:text="أرسل لنا رأيك"
                android:textColor="#343434"
                android:textDirection="rtl" />

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_info2"
                android:layout_marginTop="13dp"
                android:background="@drawable/card_background2">

                <Button
                    android:id="@+id/bt_send"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/t3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:background="@color/colorPrimary"
                    android:onClick="Sendaction"
                    android:text="إرسال"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/t2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/card_state_pressed"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="الإسم"
                    android:inputType="textPersonName"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#343434"
                    android:textDirection="rtl"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/t2"
                    android:background="@drawable/card_state_pressed"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="البريد الإلكتروني"
                    android:inputType="textPersonName"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textColor="#343434"
                    android:textDirection="rtl"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/t1"
                    android:background="@drawable/card_state_pressed"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="الرسالة"
                    android:inputType="textPersonName"
                    android:lines="3"
                    android:maxLines="5"
                    android:paddingRight="15dp"
                    android:paddingTop="35dp"
                    android:scrollbars="horizontal"
                    android:textColor="#343434"
                    android:textDirection="rtl"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bt_send"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textDirection="rtl"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/card_background2">

        <ImageView
            android:id="@+id/backclik"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtTitel"
            android:onClick="Gohome"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/txtTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="اتصل بنا"

            android:textColor="#131313"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        </RelativeLayout>

        <ImageView
            android:id="@+id/homeclick"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/txtTitel"
            android:layout_alignParentLeft="true"
            android:onClick="Gohome"
            app:srcCompat="@drawable/homa" />

    </RelativeLayout>


</RelativeLayout>

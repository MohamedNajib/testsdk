<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativew3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:background="@drawable/homebackground">

        <ListView
            android:id="@+id/lstContact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/homebackground"
            android:cacheColorHint="#0000"
            android:divider="#0000"
            android:dividerHeight="6dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/card_state_pressed">

        <TextView
            android:id="@+id/txtTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/backclik"
            android:layout_centerHorizontal="true"
            android:text="بحث عام"
            android:textColor="#131313"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/txtTitel"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp">

            <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentTop="true"
                android:background="@drawable/searchround"
                android:gravity="center"
                android:padding="2dp"
                android:queryHint="بحث"
                android:textAlignment="center"></SearchView>

        </RelativeLayout>

        <ImageView
            android:id="@+id/backclik"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/homeclick"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/homa" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tblayoutx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relative2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#C5B35D">

            <android.support.design.widget.TabItem
                android:id="@+id/Tabitem_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حيثيات" />

            <android.support.design.widget.TabItem
                android:id="@+id/Tabitem_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="موسوعة النيابة" />

            <android.support.design.widget.TabItem
                android:id="@+id/Tabitem_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أحكام النقض" />

            <android.support.design.widget.TabItem
                android:id="@+id/Tabitem_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تشريعات" />
        </android.support.design.widget.TabLayout>

    </RelativeLayout>


</RelativeLayout>
